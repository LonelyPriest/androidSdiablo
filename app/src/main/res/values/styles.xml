<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.DangerButton" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="colorButtonNormal">@color/red</item>
    </style>

    <style name="AppTheme.SuccessButton" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="colorButtonNormal">@color/greenDark</item>
    </style>

    <style name="AppTheme.ButtonBorderless" parent="Widget.AppCompat.Button.Borderless.Colored">

    </style>

    <style name="LoginTextLabel">
        <item name="android:textSize">20sp</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="DiabloNavigationDrawer">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="LoadingTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
